<div class="row py-3">
  <div class="col-md-8">
    <h3>Messages</h3>
    {% for message in messages %}
      <div class="row">
        {% if message.user_from == user %}
          <div class="col-md-2"></div>
          <div class="col-md-10 message from-me">
            {{ message.message|e }}
          </div>
        {% else %}
          <div class="col-md-10 message">
            {{ message.message|e }}
          </div>
          <div class="col-md-2"></div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
